<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/activatedBackgroundIndicator">

  <TextView android:id="@+id/list_item_device_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="left|center_vertical"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:textColor="#404040"
            android:ellipsize="end"
            android:singleLine="true"/>

  <View android:id="@+id/list_item_device_name_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#dcdcdc"
        android:layout_below="@+id/list_item_device_name"/>

  <ImageView android:id="@+id/list_item_device_image"
             android:contentDescription="@string/description_device_image"
             android:layout_width="wrap_content"
             android:layout_height="48dp"
             android:layout_below="@id/list_item_device_name_separator"
             android:paddingTop="8dp"
             android:paddingBottom="8dp"
             android:paddingLeft="16dp"
             android:paddingRight="8dp"
             android:src="@drawable/device_computer"/>

